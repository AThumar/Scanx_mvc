@if (!Context.Request.Path.Value.Contains("/Pdf/ViewPdf"))
{
    @Html.Partial("_Sidebar")
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - ScanX</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />

    <style>
        /* Layout Styling */
        .container {
            display: flex;
            height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background: #f4f4f4;
            padding: 20px;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            bottom: 0;
            overflow-y: auto;
        }

            .sidebar h2 {
                font-size: 24px;
                margin-bottom: 20px;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

            .sidebar li {
                margin-bottom: 15px;
            }

            .sidebar a {
                text-decoration: none;
                color: black;
                font-size: 18px;
                display: block;
            }

                .sidebar a:hover {
                    font-weight: bold;
                }

        /* Main Content */
        .content {
            margin-left: 270px; /* Default with sidebar */
            padding: 30px;
            flex-grow: 1;
        }

        /* Remove sidebar margin for PDF Viewer */
        body.pdf-viewer .content {
            margin-left: 0;
        }
    </style>
</head>
<body class="@(Context.Request.Path.Value.Contains("/Pdf/ViewPdf") ? "pdf-viewer" : "")">

    <div class="content">
        @RenderBody()  <!-- This will load different pages' content -->
    </div>

</body>
</html>
