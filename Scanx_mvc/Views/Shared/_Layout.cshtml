<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - Scanx_mvc</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <h2>ScanX</h2>
            <ul>
                <li><a href="@Url.Action("Dashboard", "Pdf")">Dashboard</a></li>
                <li><a href="@Url.Action("Upload", "Pdf")">Upload PDF</a></li>
                <li><a href="#">Settings</a></li>
            </ul>
        </div>
        <div class="content">
            @RenderBody()  <!-- This is where the dashboard content will be loaded -->
        </div>
    </div>

    <style>
        .container {
            display: flex;
        }

        .sidebar {
            width: 250px;
            background: #f4f4f4;
            padding: 20px;
            height: 100vh;
        }

        .content {
            flex-grow: 1;
            padding: 20px;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            margin-bottom: 10px;
        }

        a {
            text-decoration: none;
            color: black;
        }
    </style>
</body>
</html>
