<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - ScanX</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* Layout Styling */
        .container {
            display: flex;
            height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background: #f4f4f4;
            padding: 20px;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            bottom: 0;
            overflow-y: auto;
        }

            .sidebar h2 {
                font-size: 24px;
                margin-bottom: 20px;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

            .sidebar li {
                margin-bottom: 15px;
            }

            .sidebar a {
                text-decoration: none;
                color: black;
                font-size: 18px;
                display: block;
            }

                .sidebar a:hover {
                    font-weight: bold;
                }

        /* Main Content */
        .content {
            margin-left: 270px; /* Adjusted to make space for sidebar */
            padding: 30px;
            flex-grow: 1;
        }

        /* Uploaded PDFs Layout */
        .pdf-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .pdf-item {
            width: 150px;
            padding: 15px;
            background: white;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

            .pdf-item img {
                width: 50px;
                height: 50px;
            }

            .pdf-item p {
                margin: 10px 0;
                font-weight: bold;
            }

            .pdf-item a {
                color: blue;
                text-decoration: none;
            }

                .pdf-item a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <h2>ScanX</h2>
            <ul>
                <li><a href="@Url.Action("Dashboard", "Pdf")">Dashboard</a></li>
                <li><a href="@Url.Action("Upload", "Pdf")">Upload PDF</a></li>
                <li><a href="#">Settings</a></li>
            </ul>
        </div>
        <div class="content">
            @RenderBody()  <!-- This will load the Dashboard content -->
        </div>
    </div>
</body>
</html>
