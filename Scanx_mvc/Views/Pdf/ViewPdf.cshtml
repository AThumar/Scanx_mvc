@model PdfViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View PDF - ScanX</title>
    <style>
        /* Full screen styling */
        body, html {
            margin: 0;
            padding: 0;
            width: 100vw;
            height: 100vh;
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            display: flex;
            width: 100vw;
            height: 100vh;
        }

        /* Notes Section (LEFT now) */
        .notes-section {
            width: 45%;
            padding: 20px;
            background: #ffffff;
            overflow-y: auto;
            box-shadow: 2px 0px 5px rgba(0, 0, 0, 0.1);
        }

            .notes-section h2 {
                font-size: 22px;
                margin-bottom: 10px;
            }

        textarea {
            width: 100%;
            height: 80%;
            font-size: 16px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background: white;
            resize: none;
        }

        /* PDF Viewer (RIGHT now) */
        .pdf-viewer {
            width: 55%;
            height: 100%;
            background: #333;
            display: flex;
            overflow: auto;
        }

        iframe {
            width: 100%;
            height: 100%;
            border: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Left: Notes Section -->
        <div class="notes-section">
            <h2>Notes</h2>
            <textarea placeholder="Write your notes here..."></textarea>
        </div>

        <!-- Right: PDF Viewer -->
        <div class="pdf-viewer">
            <iframe src="~/uploads/@Model.FileName" width="100%" height="100%"></iframe>
        </div>
    </div>
</body>
</html>
