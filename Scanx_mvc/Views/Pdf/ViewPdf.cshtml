@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string pdfFileName = ViewBag.PdfFileName;
}

<div class="pdf-chat-container">
    <!-- Left Side: PDF Viewer -->
    <div class="pdf-viewer">
        <iframe src="~/uploads/@pdfFileName" class="pdf-frame"></iframe>
    </div>

    <!-- Right Side: Chat & Notes -->
    <div class="chat-section">
        <div class="notes">
            <p><strong>Write Notes Here...</strong></p>
            <textarea class="notes-textarea" placeholder="Type your notes here..."></textarea>
        </div>

        <div class="chat-box">
            <p><strong>Chat</strong></p>
            <div class="messages"></div>
            <input type="text" placeholder="Type your message..." class="chat-input" />
        </div>
    </div>
</div>

<style>
    .pdf-chat-container {
        display: flex;
        height: 85vh;
    }

    .pdf-viewer {
        width: 50%;
    }

    .pdf-frame {
        width: 100%;
        height: 100%;
        border: none;
    }

    .chat-section {
        width: 50%;
        padding: 20px;
    }
</style>
