@model PdfViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View PDF</title>
    <style>
        /* Make sure this page does not show the sidebar */
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .container {
            display: flex;
            height: 100vh;
        }

        /* Notes section on the LEFT */
        .notes-section {
            width: 50%;
            padding: 20px;
            overflow-y: auto;
            background: #f8f9fa; /* Light background */
        }

        /* PDF viewer on the RIGHT */
        .pdf-viewer {
            width: 50%;
            height: 100%;
            border-left: 2px solid #ccc;
        }

        iframe {
            width: 100%;
            height: 100%;
            border: none;
        }

        textarea {
            width: 100%;
            height: 70%;
            font-size: 16px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Left: Notes Section -->
        <div class="notes-section">
            <h2>Notes</h2>
            <textarea placeholder="Write your notes here..."></textarea>
        </div>

        <!-- Right: PDF Viewer -->
        <div class="pdf-viewer">
            <iframe src="~/uploads/@Model.FileName" frameborder="0"></iframe>
        </div>
    </div>
</body>
</html>
