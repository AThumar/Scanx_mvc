@model PdfViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string pdfFileName = ViewBag.PdfFileName;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View PDF</title>
    <style>
        /* Split the screen into two equal parts */
        .container {
            display: flex;
            height: 100vh;
        }

        /* Left side for PDF */
        .pdf-viewer {
            width: 50%;
            height: 100%;
            border-right: 2px solid #ccc;
        }

        /* Right side for notes */
        .notes-section {
            width: 50%;
            padding: 20px;
            overflow-y: auto;
        }

        iframe {
            width: 100%;
            height: 100%;
            border: none;
        }

        /* Notes text area */
        textarea {
            width: 100%;
            height: 70%;
            font-size: 16px;
            padding: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Left: PDF Viewer -->
        <div class="pdf-viewer">
            <iframe src="~/uploads/@Model.FileName" frameborder="0"></iframe>
        </div>

        <!-- Right: Notes Section -->
        <div class="notes-section">
            <h2>Notes</h2>
            <textarea placeholder="Write your notes here..."></textarea>
        </div>
    </div>
</body>
</html>