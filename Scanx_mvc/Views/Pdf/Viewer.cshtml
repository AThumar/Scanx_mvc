@model string

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <h1>Work</h1>

    <div class="pdf-container">
        <!-- PDF Viewer -->
        <iframe src="~/uploads/@Model" class="pdf-viewer"></iframe>

        <!-- Notes Section -->
        <div class="notes-section">
            <h3>Write Notes Here...</h3>
            <textarea placeholder="Start writing your notes..." class="notes-box"></textarea>
        </div>
    </div>
</div>

<style>
    .pdf-container {
        display: flex;
        gap: 20px;
        margin-top: 20px;
    }

    .pdf-viewer {
        width: 60%;
        height: 80vh;
        border: 1px solid #ddd;
    }

    .notes-section {
        width: 35%;
        background: #f9f9f9;
        padding: 15px;
        border: 1px solid #ccc;
        border-radius: 8px;
    }

    .notes-box {
        width: 100%;
        height: 70vh;
        padding: 10px;
        font-size: 16px;
    }
</style>
