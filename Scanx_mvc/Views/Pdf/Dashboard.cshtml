@model List<string>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>📁 Uploaded PDFs</h2>

<div class="pdf-list">
    @foreach (var file in Model)
    {
        <div class="pdf-item">
            <img src="~/images/pdf-icon.png" alt="PDF" />
            <p>@file</p>
            <a href="@Url.Action("ViewPdf", "Pdf", new { fileName = file })">View PDF</a>
        </div>
    }
</div>


