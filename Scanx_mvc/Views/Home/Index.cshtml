@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard-container">
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="logo">
            <img src="~/images/logo.png" alt="ScanX Logo">
            <span>ScanX</span>
        </div>

        <button class="upload-btn">+ Upload PDF</button>

        <nav>
            <a href="#" class="active"><i class="icon">📂</i> Workshop</a>
            <a href="#"><i class="icon">🛡</i> Upgrade</a>
        </nav>

        <div class="storage-info">
            <p>4 out of 5 PDFs Uploaded</p>
            <div class="progress-bar">
                <div class="progress"></div>
            </div>
            <small>Upgrade to upload more PDFs</small>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <header>
            <div class="user-profile">N</div>
        </header>

        <section class="content-area">
            <h2>Welcome to ScanX</h2>
            <p>Upload and manage your scanned PDFs easily.</p>
        </section>
    </main>
</div>
